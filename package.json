{
  "name": "blog_mern_stack",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "targets": {
    "main": false,
    "default": {
      "distDir": "./public/js/bundle"
    }
  },
  "scripts": {
    "start": "nodemon server.js",
    "build:css": "postcss scss/styles.scss -o public/css/styles.css",
    "watch:css": "postcss scss/styles.scss -o public/css/styles.css --watch",
    "build:js": "parcel build public/js/index.js --dist-dir public/js",
    "watch:js": "parcel watch public/js/index.js --dist-dir public/js",
    "watch": "mix watch",
    "dev": "concurrently \"npm start\" \"npm run watch:css\" \"npm run watch:js\" \"npm run watch\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.4",
    "parcel": "^2.12.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "sharp": "^0.33.4",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "buffer": "^6.0.3",
    "connect-browser-sync": "^2.1.0",
    "laravel-mix": "^6.0.49",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.5",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.77.8",
    "sass-loader": "^12.6.0",
    "tailwindcss": "^3.4.6"
  }
}
